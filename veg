  <script>
    const products = [
      {name: "Apple", price: 120, img: "https://images.unsplash.com/photo-1567306226416-28f0efdc88ce"},
      {name: "Banana", price: 60, img: "https://images.unsplash.com/photo-1574226516831-e1dff420e12e"},
      {name: "Carrot", price: 80, img: "https://images.unsplash.com/photo-1582515073490-dc0c3f4d9d05"},
      {name: "Tomato", price: 50, img: "https://images.unsplash.com/photo-1567306226416-28f0efdc88ce"},
      {name: "Orange", price: 100, img: "https://images.unsplash.com/photo-1589874754203-16f6d2e2a1b1"},
      {name: "Potato", price: 40, img: "https://images.unsplash.com/photo-1604908177522-040618c1b53c"},
    ];

    const cart = JSON.parse(localStorage.getItem("cart")) || [];

    function loadProducts() {
      const container = document.getElementById("products");
      container.innerHTML = "";
      products.forEach((p, i) => {
        container.innerHTML += `
          <div class="card">
            <img src="${p.img}" alt="${p.name}">
            <div class="card-body">
              <h3>${p.name}</h3>
              <p class="price">‚Çπ${p.price}</p>
              <button class="btn" onclick="addToCart(${i})">Add to Cart</button>
            </div>
          </div>`;
      });
      updateCart();
    }

    function addToCart(i) {
      cart.push(products[i]);
      localStorage.setItem("cart", JSON.stringify(cart));
      updateCart();
    }

    function updateCart() {
      const list = document.getElementById("cart-list");
      const total = document.getElementById("total");
      list.innerHTML = "";
      let sum = 0;
      cart.forEach((c, i) => {
        sum += c.price;
        list.innerHTML += `<li>${c.name} - ‚Çπ${c.price} <button onclick="removeFromCart(${i})">‚ùå</button></li>`;
      });
      total.innerText = sum;
    }

    function removeFromCart(i) {
      cart.splice(i, 1);
      localStorage.setItem("cart", JSON.stringify(cart));
      updateCart();
    }

    loadProducts();
  </script>
